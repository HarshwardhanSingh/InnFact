<div class="main-form">
  <h4>Sign up</h4>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: false, required: true, autofocus: true, input_html:{placeholder: "Email"} %>
      <%= f.input :password, label: false, required: true, input_html:{placeholder: "Password"} %>
      <%= f.input :password_confirmation, label: false, required: true, input_html:{placeholder: "Confirm Password"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "REGISTER", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
