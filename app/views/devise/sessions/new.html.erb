<div class="main-form">
	<h4>Sign in</h4>
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, label: false, required: false, autofocus: true, input_html:{placeholder: "Email"} %>
	    <%= f.input :password, label: false, required: false, input_html:{placeholder: "Password"} %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "SIGN IN", class: "btn btn-primary" %>
	  </div>
	<% end %>
</div>